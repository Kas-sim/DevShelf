<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.web.WebView?>

<BorderPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.gui.controllers.WebViewController">
    <top>
        <HBox style="-fx-background-color: #34495e; -fx-padding: 10;">
            <Button text="Close Reader" onAction="#handleClose" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
        </HBox>
    </top>
    <center>
        <WebView fx:id="webView" />
    </center>
</BorderPane>