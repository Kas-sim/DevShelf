<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.gui.controllers.MainViewController">

    <top>
    <VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #2c3e50; -fx-padding: 20;">
        <Label text="ðŸ“˜ DevShelf" textFill="WHITE">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <HBox alignment="CENTER" spacing="10.0">
            <TextField fx:id="searchField" onAction="#handleSearch" prefWidth="400.0" promptText="Search for books..." style="-fx-font-size: 14; -fx-background-radius: 5;" />
            <Button fx:id="searchButton" onAction="#handleSearch" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold;" text="Search" />
        </HBox>

        <HBox alignment="CENTER" spacing="10.0" style="-fx-padding: 5;">
            <Label text="Filter by:" textFill="#bdc3c7" />
            <TextField fx:id="categoryFilter" promptText="Category (e.g. Python)" prefWidth="150.0" />
            <TextField fx:id="authorFilter" promptText="Author" prefWidth="150.0" />
            <Button text="Apply Filters" onAction="#handleFilter" style="-fx-background-color: #34495e; -fx-text-fill: white;" />
            <Button text="Clear" onAction="#handleClearFilter" style="-fx-background-color: #7f8c8d; -fx-text-fill: white;" />
        </HBox>

        <Label fx:id="statusLabel" textFill="#ecf0f1" />
    </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>
                <VBox fx:id="resultsContainer" spacing="10.0" style="-fx-padding: 20;">
                </VBox>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <Label alignment="CENTER" text="DevShelf v1.0 - Powered by JavaFX" BorderPane.alignment="CENTER" style="-fx-padding: 10; -fx-text-fill: grey;" />
    </bottom>

</BorderPane>